<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_CHARACTERSCOUNTERGHSVS</name>
	<author>G@HService Berlin Neukölln, Volkmar Volli Schlothauer</author>
	<creationDate>2018-12-28</creationDate>
	<copyright>(C) 2018, G@HService Berlin Neukölln, Volkmar Volli Schlothauer.</copyright>
	<license>GNU General Public License version 3 or later; see LICENSE.txt.</license>
	<authorUrl>https://www.ghsvs.de</authorUrl>
	<version>2021.08.12</version>
	<description>PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_XML_DESCRIPTION</description>

	<versionHistory>
		https://updates.ghsvs.de/changelog.php?file=plg_system_characterscounterghsvs
	</versionHistory>

	<updateservers><server type="extension" priority="1" name="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS">https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/plg_system_characterscounterghsvs-update.xml</server></updateservers>

	<changelogurl>https://raw.githubusercontent.com/GHSVS-de/upadateservers/master/plg_system_characterscounterghsvs-changelog.xml</changelogurl>

	<infourl>https://github.com/GHSVS-de/plg_system_characterscounterghsvs#readme</infourl>

	<downloadUrl>
	https://github.com/GHSVS-de/plg_system_characterscounterghsvs/raw/2021.08.12/dist/plg_system_characterscounterghsvs-2021.08.12.zip
	</downloadUrl>

	<versionCompare>
	https://github.com/GHSVS-de/plg_system_characterscounterghsvs/compare/2021.05.28...2021.08.12
	</versionCompare>

	<scriptfile>installerScript.php</scriptfile>
	<minimumPhp>7.3.0</minimumPhp>
	<maximumPhp>8.9999.9999</maximumPhp>
	<minimumJoomla>3.9.0</minimumJoomla>
	<maximumJoomla></maximumJoomla>
	<allowDowngrades>1</allowDowngrades>

	<files>
		<filename plugin="characterscounterghsvs">characterscounterghsvs.php</filename>
		<filename>installerScript.php</filename>
		<filename>LICENSE_VCountdown.js.txt</filename>
		<filename>LICENSE.txt</filename>
		<folder>language</folder>
		<folder>src</folder>
	</files>

	<media folder="media" destination="plg_system_characterscounterghsvs">
		<folder>css</folder>
		<folder>js</folder>
	</media>

	<config>
		<fields name="params" addfieldpath="plugins/system/characterscounterghsvs/src/Field">

			<fieldset name="basic">
				<field type="hidden" default="1" name="characterscounterghsvsplugin" />
				<field type="plgSystemCharactersCounterGhsvs.assetsbe" name="assetsbe"
					hidden="true" />
			</fieldset>

<!--thanks-->
			<fieldset name="thanks" label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_THANKS">
				<field name="Thanksspacer" type="note" class="alert alert-info"
					description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_SPACERTHANKS"/>
				<field name="Thingsspacer" type="note" class="alert alert-info"
					description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_SPACERTHINGS"/>
			</fieldset>
<!--/thanks-->

<!--countersettings-basic-->
			<fieldset name="countersettings-basic"
				label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_FIELDSET_BASIC">

				<field type="list" name="removeCharcounter" default="1" filter="integer"
					label="[removeCharcounter]"
					description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_REMOVECHARCOUNTER">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="list" name="removeMaxlength" default="1" filter="integer"
					label="[removeMaxlength]"
					description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_REMOVEMAXLENGTH">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field type="note" name="charsTypedLabel"
					label="[charsTypedLabel]"
					description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_TYPED_LABEL_DESC" />

				<field type="list" name="loadCSS" default="1" filter="integer"
					label="[loadCSS] Load vcountdownghsvs.css">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>

			</fieldset>
<!--/countersettings-basic-->

		</fields>
	</config>
</extension>
