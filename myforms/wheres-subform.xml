<?xml version="1.0" encoding="UTF-8"?>
<form>

	<field name="note" type="text" default=""
		label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_NOTE"
		description=""
		filter="string" />

	<field name="active" type="radio" default="0" class="switcher btn-group btn-group-yesno"
		label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_ACTIVE"
		description=""
		filter="integer">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
	</field>

	<field name="client" type="radio" class="btn-group btn-group-yesno" default="administrator"
		label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_CLIENT"
		description=""
		readonly="true"
		filter="string">
			<option value="site">Site</option>
			<option value="administrator">Administrator</option>
			<option value="site||administrator">Site/Administrator</option>
	</field>

	<field name="context" type="list" class="btn-group btn-group-yesno" default=""
		required="true"
		label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_CONTEXT"
		description=""
		filter="string">
			<option value="">JNONE</option>
			<option value="com_content.article|edit">com_content.article layout=edit</option>
			<option value="com_menus.item|edit">com_menus.item layout=edit</option>
	</field>

	<field name="target" class="input-xxlarge" type="text" default=""
		required="true"
		label="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_TARGET"
		description="PLG_SYSTEM_CHARACTERSCOUNTERGHSVS_TARGET_DESC"
		filter="string" />

	<field type="radio" name="chopText" default="0" class="switcher btn-group btn-group-yesno"
		label="[chopText]"
		description=""
		filter="integer">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
	</field>

	<field type="number" min="1" name="maxChars" default="150"
		label="[maxChars]"
		description=""
		filter="integer" />

</form>
